# i3 config file (v4)

exec --no-startup-id ~/.bin/startup-script &

focus_follows_mouse no
font pango:Awesome 12, DejaVu Sans Mono 14
new_window pixel 2

#
### variables
#
set $mod Mod4
set $scratchKey Print

set $left h
set $down j
set $up k
set $right l

# workspace names
set $tag1 "1: www  "
set $tag2 "2: code  "
set $tag3 "3: terminal  "
set $tag4 "4: debug  "
set $tag5 "5: media  "
set $tag6 "6: VMs  "
# default applications
set $term urxvt
set $menu dmenu_run  -nb '#212121' -nf '#FFFFFF' -fn 'Droid Sans Mono-14'

### Media keys
#
    bindsym XF86MonBrightnessUp exec --no-startup-id light -A 10
    bindsym XF86MonBrightnessDown exec --no-startup-id light -U 10
    bindsym XF86AudioRaiseVolume exec amixer -q set Master 2dB+ unmute
    bindsym XF86AudioLowerVolume exec amixer -q set Master 2dB- unmute
    bindsym XF86AudioMute exec amixer -q set Master toggle
#
#----------Navigation--------
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # or use $mod+[up|down|left|right]
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right
    # move to next prev workspace
    bindsym $mod+Shift+Left workspace prev_on_output
    bindsym $mod+Shift+Right workspace next_on_output
    bindsym $mod+Shift+$left workspace prev_on_output
    bindsym $mod+Shift+$right workspace next_on_output
    # move container to next prev workspace
    bindsym $mod+Control+Left move container to workspace prev_on_output
    bindsym $mod+Control+Right move container to workspace next_on_output
    bindsym $mod+Control+$left move container to workspace prev_on_output
    bindsym $mod+Control+$right move container to workspace next_on_output

#
### WM bindings
#
    # start a terminal
    bindsym $mod+Return exec $term

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    floating_modifier $mod

    # kill focused window
    bindsym $mod+q kill

    # start your launcher
    bindsym $mod+d exec $menu


    # reload the configuration file
    bindsym $mod+Shift+c reload

    # exit 
    bindsym $mod+Shift+e exec "i3-msg exit"

### Workspaces:
    bindsym $mod+1 workspace $tag1
    bindsym $mod+2 workspace $tag2
    bindsym $mod+3 workspace $tag3
    bindsym $mod+4 workspace $tag4
    bindsym $mod+5 workspace $tag5
    bindsym $mod+6 workspace $tag6
    bindsym $mod+7 workspace 7
    bindsym $mod+8 workspace 8
    bindsym $mod+9 workspace 9
    bindsym $mod+0 workspace 10
    # move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace $tag1
    bindsym $mod+Shift+2 move container to workspace $tag2
    bindsym $mod+Shift+3 move container to workspace $tag3
    bindsym $mod+Shift+4 move container to workspace $tag4
    bindsym $mod+Shift+5 move container to workspace $tag5
    bindsym $mod+Shift+6 move container to workspace $tag6
    bindsym $mod+Shift+7 move container to workspace 7
    bindsym $mod+Shift+8 move container to workspace 8
    bindsym $mod+Shift+9 move container to workspace 9
    bindsym $mod+Shift+0 move container to workspace 10
#
# Layut stuff:
    # bindsym $mod+h splith
    bindsym $mod+v splitv
    # bindsym $mod+s layout stacking
    bindsym $mod+t layout tabbed
    bindsym $mod+s layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # move focus to the parent container
    bindsym $mod+p focus parent
    bindsym $mod+c focus child

    bindsym $mod+shift+s sticky toggle
#
# Scratchpad:
#
    # Move the currently focused window to the scratchpad
    bindsym $mod+$scratchKey move scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show
    bindsym $scratchKey scratchpad show
    # removes item from scratchpad
    bindsym $mod+shift+$scratchKey floating disable
#
#   MODES 
#

# ---- move
bindsym $mod+m mode "move" focus floating
mode "move" {
    bindsym $mod+Tab focus right
    bindsym $left move left
    bindsym $down move down
    bindsym $up move up
    bindsym $right move right
    bindsym Left  move left
    bindsym Down  move down
    bindsym Up    move up
    bindsym Right move right

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
#
# resize mode:
#
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym $left resize shrink width 10 px or 10 ppt
    bindsym $down resize grow height 10 px or 10 ppt
    bindsym $up resize shrink height 10 px or 10 ppt
    bindsym $right resize grow width 10 px or 10 ppt

    # ditto, with arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

#
# layout mode
#
bindsym $mod+shift+m mode "layout"
mode "layout" {
    bindsym v layout splitv ;mode "default"
    bindsym h layout splith ;mode "default"
    bindsym s layout toggle split ;mode "default"
    bindsym t layout tabbed ;mode "default"
    bindsym space layout toggle all
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
#
# launcher mode
#
bindsym $mod+semicolon mode "launch"
mode "launch" {
    bindsym c exec --no-startup-id chromium ; mode "default"
    bindsym f exec --no-startup-id firefox; mode "default"
    bindsym p exec --no-startup-id pcmanfm ; mode "default"
    bindsym t exec --no-startup-id urxvt; mode "default"
    bindsym $mod+Return exec --no-startup-id urxvtc -name dropTerm; mode "default"
    
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

#
# volume mode
#
bindsym $mod+shift+v mode "volume"
mode "volume" {
    bindsym $up exec amixer -q set Master 2dB+ unmute
    bindsym Up exec amixer -q set Master 2dB+ unmute
    bindsym $down exec amixer -q set Master 2dB- unmute
    bindsym Down exec amixer -q set Master 2dB- unmute
    bindsym m exec amixer -q set Master toggle
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

#
# brightness mode
#
bindsym $mod+shift+b mode "brightness"
mode "brightness" {
    bindsym $up exec --no-startup-id light -A 5
    bindsym Up exec --no-startup-id light -A 5
    bindsym $down exec --no-startup-id light -U 5
    bindsym Down exec --no-startup-id light -U 5
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


#
# Status Bar:
#

bar {
    workspace_buttons yes
    font pango: Droid Sans Mono for Powerline 14
    position top
    # tray_output none
    status_command bumblebee-status -m battery brightness nic date time -p interval=2.5 time.format="%I:%M %P" date.format="%b %-d %Y" -t solarized-powerline

    colors {
        separator #666666
        background #222222
        statusline #dddddd
        focused_workspace #1793D1 #1793D1 #ffffff
        focused_workspace #333333 #1793D1 #ffffff
        active_workspace #333333 #333333 #ffffff
        inactive_workspace #333333 #333333 #888888
        urgent_workspace #2f343a #900000 #ffffff
    }
}

bar {
    # tray_output none
    workspace_buttons no
    binding_mode_indicator no
    # tray_output none
    font pango: Droid Sans Mono for Powerline 14
    position bottom
    status_command bumblebee-status -m sensors memory disk -p inteval=2.5 memory.usedonly=1 disk.showUsed="no" disk.showSize="no" -t solarized-powerline

    colors {
        separator #666666
        background #222222
        statusline #dddddd
        focused_workspace #1793D1 #1793D1 #ffffff
        focused_workspace #333333 #1793D1 #ffffff
        active_workspace #333333 #333333 #ffffff
        inactive_workspace #333333 #333333 #888888
        urgent_workspace #2f343a #900000 #ffffff
    }
}

#
#  Colors/Appearance
#

client.focused #0088CC #0088CC #ffffff #dddddd
client.focused_inactive #333333 #333333 #888888 #292d2e
client.unfocused #333333 #333333 #888888 #292d2e
client.urgent #2f343a #900000 #ffffff #900000

#
#   Rules
#

assign [class="Chromium"] $tag1
assign [instance="(?i)Karma.*$"] $tag4
assign [class="Code"] $tag2

for_window [class="[Q,q]emu.*"] border none; fullscreen
assign [class="[Q,q]emu\-system.*"] $tag6
assign [class="[Q,q]EMU.*"] $tag6

# my Drop down terminal
# for_window [title="^dropTerm"] border none; floating enable; move scratchpad; scratchpad show;
# for_window [title="^dropTerm"] resize set 1920 1080; resize shrink height 50px; move scratchpad; 
for_window [instance="dropTerm"] border none; floating enable;
for_window [instance="dropTerm"] move scratchpad; [instance="dropTerm"] scratchpad show; resize set 1920 1000; move position 0px 25px; move scratchpad;move position 0px 25px;
