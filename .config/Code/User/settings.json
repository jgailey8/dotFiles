// Place your settings in this file to overwrite the default settings
{
    // "workbench.experimental.colorCustomizations": {
    //     "statusBarBackground": "#000000",
    //     "statusBarForeground": "#00ff00",
    //     "statusBarNoFolderBackground": "#0A0A0D",
    //     "statusBarDebuggingBackground": "#811f1f"
    // },
    // "csharp.fallbackDebuggerLinuxRuntimeId": "ubuntu.16.10-x64",
    "files.exclude": {
        "**/.git": true, // this is a default value
        "**/.DS_Store": true, // this is a default value
        "**/node_modules": true, // this excludes all folders 
        // named "node_modules" from 
        // the explore tree
        // alternative version
        "node_modules": true // this excludes the folder 
        // only from the root of
        // your workspace 
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/node_modules/**": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },
    "update.channel": "none",
    "workbench.editor.showTabs": false,
    "editor.fontSize": 18,
    "editor.formatOnPaste": true,
    "editor.fontFamily": "'Incsolota'",
    "editor.autoClosingBrackets": false,
    "editor.tabCompletion": true,
    "editor.snippetSuggestions": "top",
    "editor.cursorBlinking": "solid",
    "typescript.check.tscVersion": false,
    "vim.autoindent": true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors": {
        "normal": "#2222ff",
        "insert": "#11aa11",
        "visual": "#3f22af",
        "visualline": "#005f87",
        "visualblock": "#86592d",
        "replace": "#aa2222"
    },
    "vim.easymotion": false,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.useCtrlKeys": false,
    "vim.showcmd": true,
    "vim.searchHighlightColor": "rgba(50, 50, 255, 0.9)",
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        { // remap : to vs code commands
            "before": [
                ":"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.showCommands",
                    "args": []
                }
            ]
        },
        { // remap : to vs code commands
            "before": [
                "leader",
                "leader"
            ],
            "after": [
                ":"
            ]
        },
        {
            // my easy navigation hotkeys
            "before": [
                "H"
            ],
            "after": [
                "Home"
            ]
        },
        {
            "before": [
                "L"
            ],
            "after": [
                "End"
            ]
        },
        {
            "before": [
                "J"
            ],
            "after": [
                "C-d"
            ]
        },
        {
            "before": [
                "K"
            ],
            "after": [
                "C-u"
            ]
        },
        {
            "before": [
                "leader",
                "g",
                "d"
            ],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.gotodeclaration",
                    "when": "editorhasdefinitionprovider && editortextfocus && !isinembeddededitor",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "leader",
                "g",
                "s"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.goToSymbol",
                    "when": "editorhasdefinitionprovider && editortextfocus && !isinembeddededitor",
                    "args": []
                }
            ]
        },
        {
            // open quickfix
            "before": [
                "leader",
                "f"
            ],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.quickFix",
                    "args": []
                }
            ]
        },
        // vim write and quit with leader
        {
            "before": [
                "leader",
                "q"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "leader",
                "w"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        }
    ],
    "vim.otherModesKeyBindings": [
        { // redo with U
            "before": [
                "U"
            ],
            "after": [
                "<C-r>"
            ]
        }, // vim comment
        {
            "before": [
                "g",
                "c"
            ],
            "after": [
                "g",
                "b"
            ]
        },
        { // new line without leaving normal mode
            "before": [
                "O"
            ],
            "after": [
                "o",
                "<Esc>"
            ]
        }
    ],
    "workbench.colorCustomizations": {
        "statusBar.background": "#2222ff",
        "statusBar.noFolderBackground": "#2222ff",
        "statusBar.debuggingBackground": "#2222ff"
    }
}