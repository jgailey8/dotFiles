# bottom bar
bar {
   status_command    ~/.config/pystatus/bar1.py
   position    bottom
   workspace_buttons no
}
# top bar
bar {
   status_command    ~/.config/pystatus/bar2.py
   position    top
   workspace_buttons yes
}
#================= RULES =================
for_window [class="^.*"] border pixel 2

# assign [class="^Kodi$"] $tag4
for_window [class="^Kodi$"] move to workspace $tag4, border none; fullscreen; 

## quick terminal
exec --no-startup-id urxvtc -name myTerm
# for_window [instance="myTerm"] border none; sticky enable; floating enable;
for_window [instance="myTerm"] border none; floating enable;
for_window [instance="myTerm"] move scratchpad; [instance="myTerm"] scratchpad show; move position 0px 0px; resize grow width 683px; move scratchpad
bindsym Print [instance="myTerm"] scratchpad show

